{% extends 'base.html.twig' %}

{% block title %}Devis{% endblock %}

{% block body %}
   
<div class="text-center mt-5 mb-5 font-semibold text-lg">Remplissez votre demande de devis </div>
  <div class="modal-body w-96 p-4 border border-black">

    {{ form_start(form) }}

    <div class="mb-4 font-semibold">
        {{ form_row(form.nom, {'label': 'Nom', 'attr': {'class': 'border w-full p-2 font-normal'}}) }}
    </div>

    
    <div class="mb-4 font-semibold">
        {{ form_row(form.prenom, {'label': 'Prenom', 'attr': {'class': 'border w-full p-2 font-normal'}}) }}
    </div>

    <div class="mb-4 font-semibold">
        {{ form_row(form.email, {'label': 'Email', 'attr': {'class': 'border w-full p-2 font-normal'}}) }}
    </div>

    <div class="mb-4 font-semibold">
        {{ form_row(form.telephone, {'label': 'Téléphone (fixe ou portable)', 'attr': {'class': 'border w-full p-2 font-normal'}}) }}
    </div>

    <div class="mb-4 font-semibold">
        {{ form_row(form.descriptionTravaux, {'label': 'Description de vos travaux a prévoir', 'attr': {'class': 'border w-full p-2 font-normal'}}) }}
    </div>

    {{ form_rest(form) }}
    
    {{ form_end(form) }}
</div>
    <div class="modal" id="modalDevis" tabindex="-50" role="dialog" aria-labelledby="modalDevisLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-semibold mr-20" id="modalDevisLabel">Demande de devis</h5>
                    <button type="button" class="close mt-2 mb-2 ml-10" data-dismiss="modal" aria-label="Close" style="background-color: red">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                
             
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" style="background-color: red">Fermer</button>
                    <button type="button" id="submitDevisBtn" class="btn btn-primary" style="background-color: green">Envoyer</button>
                </div>
            </div>
        </div>
    </div>

    {# ... Your other HTML content ... #}
{% endblock %}
